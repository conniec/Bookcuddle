%p
  %h1
    = 'Discussion: '+ @discussion.book_name


%p
%div.status
  %table.table
    %div.progress-bars
      %tr
        %td.span4
          %h4= @user_1.name
        %td.span4
          %div.progress
            %div.bar{:style => "width: #{@status_1[0][:percent]}%;"}
        %td
          = @status_1[0][:percent]
      %tr
        %td.span6
          %h4= @user_2.name
        %td.span6
          %div.progress
            %div.bar{:style => "width: #{@status_2[0][:percent]}%;"}
        %td
          = @status_2[0][:percent]

  %div.row
    %div.span6
      %h3= @user_1.name
      %div.progress
        %div.bar{:style => "width: #{@status_1[0][:percent]}%;"}
      %ul
      - @status_1.each do |s|
        %li
          Percent: 
          = s[:created_at]
        %li
          Date: 
          = s[:percent]

    %div.span6
      %h3= @user_2.name
      %ul
      %div.progress
        %div.bar{:style => "width: #{@status_2[0][:percent]}%;"}
      - @status_2.each do |s|
        %li
          Percent: 
          = s[:created_at]
        %li
          Date: 
          = s[:percent]